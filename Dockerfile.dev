# Development Dockerfile with hot reload
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install ALL dependencies (including dev)
RUN npm install

# Copy source
COPY . .

# Expose Vite dev server port
EXPOSE 8080

# Start dev server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]

